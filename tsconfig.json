{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    "allowJs": true,
    "checkJs": true, // ✅ Enable JS error checking
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // ✅ Needed for absolute imports
    "paths": {
      "@/*": [
        "src/*"
      ] // ✅ Makes @ imports work correctly
    },
    "forceConsistentCasingInFileNames": true, // ✅ Catches Vercel-case errors
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/dev/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
